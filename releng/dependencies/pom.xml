	<modelVersion>4.0.0</modelVersion>

	<artifactId>dependencies</artifactId>
	<packaging>pom</packaging>
	<description>lists the dependencies necessary to provide a standalone jabylon</description>


	<parent>
		<artifactId>jabylon-parent</artifactId>
		<groupId>de.jutzig.jabylon</groupId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../parent/pom.xml</relativePath>
	</parent>

	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>create-repo</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<inherited>false</inherited>
						<configuration>
							
							<useRepositoryLayout>true</useRepositoryLayout>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>index-obr</id>
						<phase>process-resources</phase>
						<goals>
							<goal>index</goal>
						</goals>
						<inherited>false</inherited>
						<configuration>
							<mavenRepository>${project.build.directory}/dependency</mavenRepository>
							<obrRepository>target/repository.xml</obrRepository>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


