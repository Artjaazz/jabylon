<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension-point id="permission" name="Permission" schema="schema/permission.exsd"/>
   <extension-point id="role" name="Role" schema="schema/role.exsd"/>
   <extension
         id="dbLoginModule"
         point="org.eclipse.equinox.security.loginModule">
      <loginModule
            class="de.jutzig.jabylon.security.internal.DBLoginModule"
            description="DB LoginModule">
      </loginModule>
   </extension>
   <extension
         id="ldapLoginModule"
         point="org.eclipse.equinox.security.loginModule">
      <loginModule
            class="de.jutzig.jabylon.security.internal.LDAPLoginModule"
            description="LDAP LoginModule">
      </loginModule>
   </extension>
   <extension
         id="callbackHandler"
         point="org.eclipse.equinox.security.callbackHandler">
      <callbackHandler
            class="de.jutzig.jabylon.security.LoginDialog">
      </callbackHandler>
   </extension>
   <extension
         point="org.eclipse.equinox.security.callbackHandlerMapping">
      <callbackHandlerMapping
            callbackHandlerId="de.jutzig.jabylon.security.callbackHandler"
            configName="DB">
      </callbackHandlerMapping>
   </extension>
   <extension
         point="de.jutzig.jabylon.security.permission">
      <permission
            description="Configure all projects"
            name="#Project.global.config">
      </permission>
      <permission
            description="Edit users"
            name="#User.global.config">
      </permission>
      <permission
            description="base right to access any kind of configuration"
            name="#Workspace.global.config">
      </permission>
      <permission
            description="Install Plugins and perform updates"
            name="#System.global.config">
      </permission>
      <permission
            description="Right to view all translations"
            name="#Workspace.global.view">
      </permission>
      <permission
            description="Right to edit all translations"
            name="#Workspace.global.edit">
      </permission>
      <permission
            description="Permission to edit the project"
            name="#Project.[name].edit">
      </permission>
      <permission
            description="Permission to view the project"
            name="#Project.[name].view">
      </permission>
      <permission
            description="Permission to configure the project"
            name="#Project.[name].configure">
      </permission>
      <permission
            name="#User.[name].edit">
      </permission>
   </extension>
   <extension
         point="de.jutzig.jabylon.security.role">
      <role
            description="Administrator"
            name="ADMINISTRATOR">
         <permission_id
               id="#Project.global.config">
         </permission_id>
         <permission_id
               id="#System.global.edit">
         </permission_id>
         <permission_id
               id="#User.global.config">
         </permission_id>
         <permission_id
               id="#Workspace.global.config">
         </permission_id>
         <permission_id
               id="#Workspace.global.edit">
         </permission_id>
         <permission_id
               id="#Workspace.global.view">
         </permission_id>
      </role>
   </extension>
</plugin>
